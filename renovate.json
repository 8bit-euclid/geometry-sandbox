{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "description": "Group Bazel module updates",
      "matchManagers": ["bazel-module"],
      "groupName": "bazel-modules"
    },
    {
      "description": "Auto merge patch/minor for hedron_compile_commands",
      "matchManagers": ["bazel-module"],
      "matchPackageNames": ["hedron_compile_commands"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
