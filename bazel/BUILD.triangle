"""
Build file for Triangle library
"""

package(default_visibility = ["//visibility:public"])

cc_library(
    name = "triangle",
    srcs = ["triangle.cpp"],
    hdrs = ["triangle.h"],
    copts = [
        "-std=c++17",
        "-DTRILIBRARY",
        "-DANSI_DECLARATORS",
        "-DNO_TIMER",
    ],
    defines = [
        "TRILIBRARY",
        "ANSI_DECLARATORS", 
        "NO_TIMER",
    ],
)
